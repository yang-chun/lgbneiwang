/* pages/post/index.wxss */

@import "../wikipedia/wikipedia.wxss";
.top_box{
  width: 100%;
  height:260rpx;
  background: #2C2D31;
}

.top{
  padding-top:70rpx;
  display: flex;
}

.portrait{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.info_box{
  color: #fff;
  margin: auto 0;
  margin-left: 24rpx;
}

.info_box .name{
  font-size: 42rpx;
  font-weight: 500;
  display: flex;
}

.answer .icon-taolunqu{
  color: #03AD8F;
  font-size: 36rpx;
  margin-right: 6rpx;
}
.answer{
  width: 208rpx;
  height: 57rpx;
  background: #fff;
  border-radius: 29rpx;
  text-align: center;
  color: #1C1C1C;
  font-size:28rpx;
  display: flex;
  align-items:center;
  justify-content:center;
  position: absolute;
  right: 36rpx;
}

.info_box .traffic{
  margin-top:24rpx; 
  font-size: 24rpx;
  
}

.info_box .traffic text{
  margin-right:42rpx;
}

.cont_box{
  width: 100%;
  background: #fff;
  margin-top:24rpx;
  margin-bottom: 100rpx;
}

.nav{
  width: 100%;
  /* line-height: 96rpx; */
  display: flex;
  justify-content:center;
  font-size: 32rpx;
  color: #666;
  padding-top: 32rpx;
  padding-bottom: 32rpx;

}

.nav .title_box{
  padding-right:142rpx;
  padding-left: 142rpx;
}

.nav .title{
  font-weight: 600;
}

.titleLine{
  width: 48rpx;
  height: 8rpx;
  background: #03AD8F;
  margin-top: -12rpx;
  margin-left: 15rpx;
}

.label_box{
  display: flex;
}

.label_box .label{
  border: 1rpx solid #C0C0C0;
  color: #C0C0C0;
  padding: 14rpx 36rpx;
  margin-left: 36rpx;
  border-radius:60rpx;
  font-size: 28rpx;
  display: inline-block;
}

.label_box .all{
  border:1rpx solid #1C1C1C;
  color: #1C1C1C;
}

.message_box{
  width: 252rpx;
  height: 60rpx;
  background: #ECEEEE;
  border-radius: 30rpx;
  margin: 0 auto;
  margin-bottom:54rpx;
}
.message{
  height: 36rpx;
  display: flex;
  justify-content: center;
  padding-top: 10rpx;
  
}
.message_box .num{
  width: 36rpx;
  height: 36rpx;
  background: #D14B64;
  border-radius:50%;
  font-size: 20rpx;
  color: #fff;
  padding: 2rpx;
  line-height: 36rpx;
  text-align: center;
  margin-right:20rpx;
}

.message_box .msg{
  color: #1C1C1C;
  font-size: 28rpx;
  /* margin:auto 0; */

}

.list_box{
  margin-top:30rpx;
  margin-left:36rpx;
}

.list_portrait{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}

.list_box .user_info{
  display:flex;
}
.list_box .user_info .name_box{
  margin-left: 24rpx;
}

.list_box .user_info .name{
  font-size: 32rpx;
  color: #1C1C1C;
  font-weight:500;
}

.list_box .user_info .release_date{
  color:#C0C0C0;
  font-size: 26rpx;
}

.list_box .user_info .delete{
  color: #03AD8F;
  text-align: right;
  position: absolute;
  right: 0;
  font-size:26rpx;
  padding-right:36rpx;
  padding-left:36rpx;
}
.list_cont{
  margin-left: 96rpx;
  margin-top: 10rpx;
  padding-bottom: 44rpx;
  border-bottom: 1rpx solid rgb(228, 230, 230);
}

.list_cont .content{
  padding-right: 36rpx;
  font-size: 32rpx;
  color: #666666;
}

.list_image{
  margin-top: 10rpx;
}
.list_image .one_image{
  width: 80%;
}

.list_image .more_image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;  
}
.hide{
text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 4;
-webkit-box-orient: vertical;
}

.more{
  color: #03AD8F;
  font-size: 32rpx;
}

.operation{
  display: flex;
  margin-top: 43rpx;
}

button{
  padding: 0;
  margin: 0;
  line-height: 40rpx;
  background: #fff;
}
button::after{

border:none;

}

.operation .icon-fenxiang,
.operation .icon-bianji,
.operation .icon-dianzan{
  font-size:40rpx;
  color: #3C3C3C;
  /* margin-right: 105rpx; */
}

.operation .text text{
  margin-left: 19rpx;
  font-size: 24rpx;
  color: #C0C0C0;
  margin-right: 105rpx;
}


.praise{
  position: absolute;
  right: 36rpx;
}

.praise text{
  margin-left: 19rpx;
  font-size: 24rpx;
  color: #C0C0C0;
}

.edit{
  position: fixed;
  bottom: 201rpx;
  right: 54rpx;
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  background: #03AD8F;
  box-shadow:0px 0px 12px 0px rgba(3,73,61,0.54);
  text-align: center;
  line-height: 85rpx;
  font-size: 50rpx;
  color: #fff;
}

/* 成员 */

.community_list{
  display:flex;
  padding-bottom:54rpx;
}
.community_list .list_portrait{
  width: 120rpx;
  height: 120rpx;
  margin-left: 36rpx;
}
.community_list .user_info{
    margin:  auto 0;
    margin-left:24rpx;
}

.community_list .user_info .name{
  padding:15rpx 0;
}

.community_list .name{
  font-weight: 600;
  display: flex;
}


.phone{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  /* margin-left:42rpx; */
  text-align: center;
  line-height: 54rpx;
  font-size: 30rpx;
}

.phoneyes{
    color: #03AD8F;
    border: 1rpx solid #03AD8F;
}

.phoneno{
    color:rgb(133, 138, 137);
    border: 1rpx solid rgb(133, 138, 137);  
}

.community_list .info{
  font-size: 28rpx;
  color: #666666;
}

.community_list .user_name{
  min-width: 160rpx;
  margin-left: 10rpx;
}