/* pages/post/message.wxss */
.list_box{
  background: #fff;
  margin-top:24rpx;
}

.list{
  display: flex;
  padding-top: 36rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #BFC7C5;
}
.list .portrait{
  width: 60rpx;
  height: 60rpx;
  border-radius:50%;
  margin-left:36rpx;
  margin-bottom: 36rpx;
}

.list_info{
  padding-left:18rpx;
  margin-top: 6rpx;
  width: 60%;
}

.list_name{
  color: #1C1C1C;
  font-size: 26rpx;
  font-weight: 600;
}

.list_date{
  color: #C0C0C0;
  font-size: 22rpx;
  margin-top: 12rpx;
}

.comments_cont{
  margin-top:30rpx;
  color: #3C3C3C;
  font-size: 30rpx;
  margin-right: 42rpx;
}

.post_cont{
  width: 162rpx;
  height: 162rpx;
  font-size:30rpx;
  color: #666666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.post_image{
  width: 162rpx;
  height: 162rpx;
}

